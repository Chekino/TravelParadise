{% extends 'base.html.twig' %}

{% block title %}Connexion - TravelParadise{% endblock %}

{% block body %}
<div class="container d-flex align-items-center justify-content-center" style="min-height: 100vh;">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg rounded border-0">
            <div class="card-body p-5 bg-light">
                <div class="text-center mb-4">
                    <h2 class="fw-bold text-primary">Bienvenue √† TravelParadise üå¥</h2>
                    <p class="text-muted">Connectez-vous pour acc√©der √† votre espace</p>
                </div>

                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                {% if app.user %}
                    <div class="alert alert-info">
                        Vous √™tes d√©j√† connect√© en tant que {{ app.user.userIdentifier }}.
                        <a href="{{ path('app_logout') }}">Se d√©connecter</a>
                    </div>
                {% endif %}

                <form method="post">
                    <div class="form-floating mb-3">
                        <input type="email" name="email" id="inputEmail" value="{{ last_username }}" required autofocus autocomplete="email" class="form-control">
                        <label for="inputEmail">Adresse e-mail</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="password" name="password" id="inputPassword" required autocomplete="current-password" class="form-control">
                        <label for="inputPassword">Mot de passe</label>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="form-check mb-4">
                        <input class="form-check-input" type="checkbox" name="_remember_me" id="remember_me">
                        <label class="form-check-label" for="remember_me">Se souvenir de moi</label>
                    </div>

                    <button class="btn btn-primary w-100 py-2 fw-semibold" type="submit">Connexion</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
